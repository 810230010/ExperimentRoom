#parse("/common/begin.vm")
#parse("/common/header.vm")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>成员详细信息($member.userName)</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5 id="rank"> </h5>
                    <a id="back" hidden="hidden"> <i class="fa fa-reply" style="color: #777777"></i></a>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">姓名</label>
                            <div class="col-sm-7">
                                <input id="name" name="chBrand" type="text" value="$!member.userName" class="form-control">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">学号</label>
                            <div class="col-sm-7">
                                <input id="name" name="chBrand" type="text" value="$!member.stuNo" class="form-control">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">班级</label>
                            <div class="col-sm-7">
                                <input id="sort" value="$!member.className" name="sort" class="form-control" type="text"/>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">担任</label>
                            <div class="col-sm-7">
                                #if($member.userType == "ADMIN")
                                    <input id="initial" name="initial" type="text" class="form-control" value="实验室负责人">
                                #elseif($member.userType == "TEACHER")
                                    <input id="initial" name="initial" type="text" class="form-control" value="指导教师" >
                                #else
                                    <input id="initial" name="initial" type="text" class="form-control" value="无">
                                #end
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">性别</label>
                            <div class="col-sm-7">
                                <input id="sort" value="$!member.sex" name="sort" class="form-control" type="text"/>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">联系电话</label>
                            <div class="col-sm-7">
                                <input id="sort" value="$!member.phone" name="sort" class="form-control" type="text"/>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">邮箱</label>
                            <div class="col-sm-7">
                                <input id="sort" value="$!member.email" name="sort" class="form-control" type="text"/>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">qq</label>
                            <div class="col-sm-7">
                                <input id="sort" value="$!member.qq" name="qq" class="form-control" type="text"/>
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <div class="text-center">
                                <input type="button" class="btn btn-success" value="修改"/>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
#parse("/common/footer.vm")


<script>
    $(document).ready(function () {


    });
</script>

#parse("/common/end.vm")