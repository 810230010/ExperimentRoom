<!--datatables-->
<script src="/static/js/plugins/dataTables/datatables.min.js"></script>

<script>
    $(document).ready(function () {
        var t = $('#datatable').DataTable({
            "ajax": {
                'url': '/user/searchAllUsers',
                "data": function(d) {
                    var param = {};
                    param.page = d.start/d.length + 1;
                    param.pageSize = d.length;
                    param.draw = d.draw;
                    param.orderColumn = d.columns[d.order[0]['column']]['data'];
                    param.orderType = d.order[0]['dir'];
                    param.searchKey = d.search["value"];
                    return param;
                },
            },
            "columns": [
                {"data":"userId","width":"7%","visible": false},
                {"data":"userType","width":"7%","visible": false},
                {"data":"userName","width": "10%","title":"姓名","orderable": false},
                {"data":"stuNo","width": "10%","title":"学号","orderable": false},
                {"data":"className","width": "10%","title":"班级","orderable": false},
                {"data":"phone","width": "10%","title":"手机号","orderable": false},
                {"data":"sex","width": "10%","title":"性别","orderable": false},
                {"data":"createTime","width": "10%","title":"加入时间","orderable": true},
                {
                    "data":"userType",
                    "width": "10%",
                    "title":"担任",
                    "orderable": false,
                    "render": function (data, type, row) {
                        if(row.userType == 'ADMIN')
                            return "实验室负责人";
                        else if(row.userType == 'MEMBER')
                            return "";
                        else
                            return "指导老师";
                    }
                },
                {
                    "data":"userId",
                    "width": "15%",
                    "title":"操作",
                    "orderable": false,
                    "render": function (data, type, row) {
                        if(row.userType == 'ADMIN' || row.userType == "TEACHER"){
                            return [
                                '<a class="btn btn-danger btn-xs table-action delete" href="javascript:void(0)">',
                                '删除 <i class="fa fa-trash-o"></i>',
                                '</a>',
                                '<a class="table-button btn btn-primary btn-xs table-action edit" href="javascript:void(0)">',
                                '编辑 <i class="fa fa-edit"></i>',
                                '</a>',
                                '<a class="table-button btn btn-primary btn-xs table-action edit" href="javascript:void(0)">',
                                '查看详情 <i class="fa fa-eye"></i>',
                                '</a>'
                            ].join('');
                        }else{
                            return [
                                '<a class="table-button btn btn-primary btn-xs table-action edit" href="javascript:void(0)">',
                                '查看详情 <i class="fa fa-eye"></i>',
                                '</a>'
                            ].join('');
                        }

                    }
                },
            ],
            "searching": true,
            "ordering":true,
            "serverSide": true,
            "deferRender": true,
            "processing": true,
            "autoWidth": false,
            "responsive": true,
            "lengthMenu": [ 5, 10, 15],
            "dom": '<"html5buttons"B>lTfgitp',
            "buttons": [],
            "language": {
                "url": "/static/js/plugins/dataTables/Chinese.json",
            }
        });
        var table = $('#datatable').DataTable();

        //修改
        table.on( 'click', '.edit', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            window.location.href = "/admin/brand/editPage?brandId="+data.brandId;
        });



    });
</script>

#parse("/common/end.vm")