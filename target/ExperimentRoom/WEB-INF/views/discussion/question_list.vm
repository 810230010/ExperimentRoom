<!--datatables-->
<script src="/static/js/plugins/dataTables/datatables.min.js"></script>
<!--layer-->
<script src="/static/js/plugins/layer/layer.js"></script>

<script>
    $(document).ready(function () {
        var t = $('#datatable').DataTable({
            "ajax": {
                'url': '/question/searchAllQuestions',
                "data": function(d) {
                    var param = {};
                    param.page = d.start/d.length + 1;
                    param.pageSize = d.length;
                    param.draw = d.draw;
                    param.orderColumn = d.columns[d.order[0]['column']]['data'];
                    param.orderType = d.order[0]['dir'];
                    param.searchKey = d.search["value"];
                    return param;
                },
            },
            "columns": [
                {"data":"questionId","width": "5%","title":"题号","orderable": false},
                {"data":"title","width": "12%","title":"标题","orderable": false},
                {"data":"category","width": "7%","title":"类型","orderable": false},
                {"data":"createTime","width": "10%","title":"发布时间","orderable": true},
                {"data":"userName","width": "10%","title":"提问人","orderable": false},
                {"data":"viewNo","width": "5%","title":"浏览数","orderable": true},
                {"data":"thumbupNo","width": "5%","title":"点赞数","orderable": true},
                {"data":"answerNo","width": "5%","title":"回复数","orderable": true},
                {
                    "data":"questionId",
                    "width": "15%",
                    "title":"操作",
                    "orderable": false,
                    "render": function (data, type, row) {
                        if('$currentUser.userType' == 'ADMIN' || '$currentUser.userType' == "TEACHER"){
                            return [
                                '<a class="col-sm-3 btn btn-danger btn-xs table-action delete" href="javascript:void(0)">',
                                '删除 <i class="fa fa-trash-o"></i>',
                                '</a>',
                                '<a class="col-sm-3 table-button btn btn-success btn-xs table-action thumbup" href="javascript:void(0)">',
                                '点赞 <i class="fa fa-thumbs-up"></i>',
                                '</a>',
                                '<a class="col-sm-3 table-button btn btn-info btn-xs table-action collect" href="javascript:void(0)">',
                                '收藏 <i class="fa fa-folder"></i>',
                                '</a>',
                                '<a class="col-sm-3 table-button btn btn-primary btn-xs table-action detail" href="javascript:void(0)">',
                                '查看详情 <i class="fa fa-eye"></i>',
                                '</a>'
                            ].join('');
                        }else{
                            return [
                                '<a class="col-sm-4 btn btn-success btn-xs table-action thumbup" href="javascript:void(0)">',
                                '点赞 <i class="fa fa-thumbs-o"></i>',
                                '</a>',
                                '<a class="col-sm-4 table-button btn btn-info btn-xs table-action collect" href="javascript:void(0)">',
                                '收藏 <i class="fa fa-edit"></i>',
                                '</a>',
                                '<a class="col-sm-4 table-button btn btn-primary btn-xs table-action detail" href="javascript:void(0)">',
                                '查看详情 <i class="fa fa-eye"></i>',
                                '</a>'
                            ].join('');
                        }

                    }
                },
            ],
            "searching": true,
            "ordering":true,
            "serverSide": true,
            "deferRender": true,
            "processing": true,
            "autoWidth": false,
            "responsive": true,
            "lengthMenu": [ 5, 10, 15],
            "dom": '<"html5buttons"B>lTfgitp',
            "buttons": [],
            "language": {
                "url": "/static/js/plugins/dataTables/Chinese.json",
            }
        });
        var table = $('#datatable').DataTable();

        //删除
        table.on( 'click', '.delete', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            swal({
                title: "确定删除该问题？",
                text: "你将无法恢复！",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#dd383d",
                confirmButtonText: "确定删除！",
                closeOnConfirm: false
            }, function(){
                $.ajax({
                    url: "/question/delete/" + data.questionId,
                    success: function(result){
                        if(result.code == 200){
                            swal("删除！", "该问题已删除。", "success");
                            setTimeout(function () {
                                table.ajax().reload;
                            },2000);
                        }
                    },
                    error: function (result) {
                        alert("系统出错")
                    }
                })

            });
        });
        //点赞
        table.on( 'click', '.thumbup', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
                $.ajax({
                    url: "/question/thumbup/",
                    data: {"userId": $currentUser.userId, "questionId": data.questionId},
                    success: function (result) {
                        if (result.code == 200) {
                            //提示层
                            layer.msg('点赞成功!');
                            setTimeout(function () {
                                table.ajax().reload;
                            },2000);
                        }
                    },
                    error: function (result) {
                        alert("系统出错")
                    }
                })
        });


        //详细信息
        table.on( 'click', '.detail', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            window.location.href = "/member/memberDetailPage?userId="+data.userId;
        });
//        $('#datatable tbody').on('click','tr td:nth-child(2)', function (e) {
//            var name = $(this).text();
//            alert(name);
//        } );



    });
</script>

#parse("/common/end.vm")